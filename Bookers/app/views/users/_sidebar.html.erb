<div class="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
	<table class="table">
		<tr></tr>
		<tr>
			<th>name</th>
			<td><%= user.name %></td>
		</tr>
		<tr>
			<th>introduction</th>
			<td><%= user.introduction %></td>
		</tr>
		<tr>
			<th>follows</th>
			<td><%= link_to user.followings.count, user_follows_path(user) %></td>
		</tr>
		<tr>
			<th>followers</th>
			<td><%= link_to user.followers.count, user_followers_path(user) %></td>
		</tr>
	</table>
	<div class="actions row">
		<% unless current_user == user %>
			<% if current_user.following?(user) %>
				<%= link_to 'フォロー外す', user_relationships_path(user), method: :delete, class: "col-xs-12 btn btn-primary" %>
			<% else %>
				<%= link_to 'フォローする', user_relationships_path(user), method: :post, class: "col-xs-12 btn btn-success" %>
			<% end %>
		<% else %>
			<%= link_to '',edit_user_path(user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
		<% end %>
	</div>

	<h2>New book</h2>

	<% if new_book.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= new_book.errors.count %> errors prohibited this obj from being saved:</h2>
	    <ul>
	    <% new_book.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

	<%= form_for(new_book, url:'/books') do |f| %>
		<div class="field row">
			<label for="book_title">Title</label>
			<%= f.text_field :title, class: "col-xs-12 book_title" %>
		</div>
		<div class="field row">
			<label for="book_opinion">Opinion</label>
			<%= f.text_area :body, class: "col-xs-12 book_opinion" %>
		</div>
		<div class="actions row">
			<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
		</div>
	<% end %>
</div>
